{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": true,
    "isolatedModules": false,
    "noEmit": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
